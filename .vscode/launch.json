{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch authentication service",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/services/authentication/src/index.ts",
      "preLaunchTask": "tsc: build - services/authentication/tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/services/authentication/dist/**/*.js"
      ],
      "envFile": "${workspaceFolder}/services/authentication/.env"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch user service",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/services/user/src/index.ts",
      "preLaunchTask": "tsc: build - services/user/tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/services/user/dist/**/*.js"
      ],
      "envFile": "${workspaceFolder}/services/user/.env"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch email service",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/services/email/src/index.ts",
      "preLaunchTask": "tsc: build - services/email/tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/services/email/dist/**/*.js"
      ],
      "envFile": "${workspaceFolder}/services/email/.env"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch api-gateway service",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/services/api-gateway/src/index.ts",
      "preLaunchTask": "tsc: build - services/api-gateway/tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/services/api-gateway/dist/**/*.js"
      ],
      "envFile": "${workspaceFolder}/services/api-gateway/.env"
    }
  ]
}
