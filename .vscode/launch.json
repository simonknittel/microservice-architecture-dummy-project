  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/services/authentication/src/index.ts",
      "preLaunchTask": "tsc: build - services/authentication/tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/services/authentication/dist/**/*.js"
      ],
      "envFile": "${workspaceFolder}/services/authentication/src/.env"
    }
  ]
}
